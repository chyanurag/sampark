{
    "extends": ["solhint:recommended"],
    "plugins": [],
    "rules": {
        "var-name-mixedcase" : ["off"],
        "immutable-vars-naming": ["off"],
        "compiler-version": ["error", "^0.8.19"],
        "func-visibility": ["warn", { "ignoreConstructors": true }],
        "avoid-throw": "off",
        "avoid-suicide": "error",
        "avoid-sha3": "warn"
    }
}
